{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Ajouter un étage</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                {{ form_end(form) }}

                <ul>
                    <li>
                        <a href="{{ path('etage_index') }}">Retourner à la liste</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset("js/etage.js") }}"></script>
{% endblock %}
