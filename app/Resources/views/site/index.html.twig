{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Liste des sites</h1>

                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Libelle</th>
                        <th scope="col">Adresse</th>
                        <th scope="col">Codepostal</th>
                        <th scope="col">Ville</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for site in sites %}
                        <tr>
                            <td scope="row"><a href="{{ path('site_show', { 'id': site.id }) }}">{{ site.id }}</a></td>
                            <td>{{ site.libelle }}</td>
                            <td>{{ site.adresse }}</td>
                            <td>{{ site.codePostal }}</td>
                            <td>{{ site.ville }}</td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('site_show', { 'id': site.id }) }}">Afficher</a>
                                <a class="btn btn-primary" href="{{ path('site_edit', { 'id': site.id }) }}">Editer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <p>
                    <a class="btn btn-primary" href="{{ path('site_new') }}">Ajouter un nouveau site</a>
                </p>
            </div>
        </div>
    </div>

{% endblock %}
